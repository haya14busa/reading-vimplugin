// }}}

// Footer {{{
#footer
  background-color: footer_bgc_color
  width:100%
  margin-top: 50px
  padding:20px 0
  p
    font-family: "Josefin Sans", "Helvetica Neue", Helvetica, Arial, sans-serif;
    font-style:italic
    font-weight:400
    margin: 0
    padding: 0
// }}}

